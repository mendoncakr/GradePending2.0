<div class="restaurant">

		<% if flash[:notice] %>
		   <%= flash[:notice] %>
		<% end %>

	<div id="current_grade">
		<%= image_tag "grade_card_a.png" if @restaurant.current_grade == "A"%>
		<%= image_tag "grade_card_b.png" if @restaurant.current_grade == "B"%>
		<%= image_tag "grade_card_c.png" if @restaurant.current_grade == "C"%>
		<%= image_tag "grade_card_gp.png" if @restaurant.current_grade == nil %></p>
	</div>

	<div id="information">
		<h1><%= @restaurant.name %></h1>
		<%= @restaurant.address %>
		<br>
		<%= @restaurant.phone.to_i %>
	</div>

	<div class="yelp_review">
		<% unless @restaurant.yelp_biz_id == -99999999 %>
		<img id="user_photo" src="<%= @restaurant.yelp_review_user_image %>">
		<br>
		<img  src="<%= @restaurant.yelp_review_rating_url %>">
		<p><%= @restaurant.yelp_review_user %> says....</p>
		<p><%= @restaurant.top_yelp_review %></p>
		<img src="http://s3-media3.fl.yelpcdn.com/assets/2/www/img/3049d7633b6e/developers/reviewsFromYelpRED.gif">
		<% else %>
		<p>No Yelp Reviews Found</p>
		<% end %>
	</div>

	<div>
		 <% if user_signed_in?  %>
			<div >
				<%= link_to "Add to Favorites", add_favorite_restaurant_path, method: :post, :id => 'add_favorite', :remote => true  %>
			</div>
		<% end %>
	</div>
</div>



