<div class="restaurant">

	<div id="current_grade">
		<%= image_tag "grade_card_a.jpg" if @restaurant.current_grade == "A"%>
		<%= image_tag "grade_card_b.jpg" if @restaurant.current_grade == "B"%>
		<%= image_tag "grade_card_c.jpg" if @restaurant.current_grade == "C"%>
		<%= image_tag "grade_card_gp.jpg" if @restaurant.current_grade == nil %></p>
	</div>

	<div id="information">
		<h1><%= @restaurant.name %></h1>
		<%= @restaurant.address %>
		<br>
		<%= @restaurant.phone.to_i %>
	</div>

	<div id="yelp_review">
		<img id="user_photo" src="<%= @restaurant.yelp_review_user_image %>">
		<br>
		<img  src="<%= @restaurant.yelp_review_rating_url %>">
		<p><%= @restaurant.yelp_review_user %> says....</p>
		<p><%= @restaurant.top_yelp_review %></p>
		<img src="http://s3-media3.fl.yelpcdn.com/assets/2/www/img/3049d7633b6e/developers/reviewsFromYelpRED.gif">
	</div>
</div>